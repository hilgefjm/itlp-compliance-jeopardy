<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="com.demo.soccer.impl.controller" />
    <mvc:annotation-driver />
    <context:property-placeholder location="classpath:db.properties" />

    <bean id="txManager" class="org.springframework.transaction.jta.JtaTransactionManager" />

    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
      <property name="jndiName" value="java:jboss/datasources/SoccerDB" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
      <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="txDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
      <property name="jndiName" value="java:jboss/datasources/SoccerDB" />
    </bean>

    <bean id="txJdbc" class="org.springframework.jdbc.core.JdbcTemplate">
      <property name="dataSource" ref="txDataSource" />
    </bean>

    <bean id="properties" class="com.demo.soccer.core.Properties" init-method="init" />

    <bean id="persistence" class="com.demo.soccer.core.Persistence" />
    <bean id="coreService" class="com.demo.soccer.core.Service">
      <property name="persistence" ref="persistence" />
    </bean>
</beans>
